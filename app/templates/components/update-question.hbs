{{#if updateQuestionForm}}
    <div>
      <form>
          <div class="form-group">
              <label for="question">Your Question:</label>
              {{input value=question id="question" placeholder=question.question}}
          </div>

          <div class="form-group">
              <label for="questioner">Your Name:</label>
              {{input value=questioner id="questioner" placeholder=question.questioner}}
          </div>

          <div class="form-group">
              <label for="notes">Supplementary info:</label>
              {{input value=notes id="notes" placeholder=question.notes}}
          </div>

        <button {{action 'updateQuestion' question}}>Update</button>
      </form>
    </div>
{{else}}
    <button {{action 'updateQuestionForm'}}>Update Question</button>
{{/if}}
